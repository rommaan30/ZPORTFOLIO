<!-- /views/resume_edit.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Resume</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Edit Your Resume</h1>
      <form id="resume-form" action="/update-resume" method="POST">
        <!-- Education Section -->
        <div class="mb-5">
          <h2 class="text-success fs-1">Education</h2>
          <div class="d-flex flex-column">
            <% education.forEach((edu, index) => { %>
            <div class="mb-3">
              <label for="degree-<%= index %>" class="form-label">Degree</label>
              <input
                type="text"
                class="form-control"
                id="degree-<%= index %>"
                name="education[<%= index %>][degree]"
                value="<%= edu.degree %>"
              />
              <label for="institution-<%= index %>" class="form-label"
                >Institution</label
              >
              <input
                type="text"
                class="form-control"
                id="institution-<%= index %>"
                name="education[<%= index %>][institution]"
                value="<%= edu.institution %>"
              />
              <label for="duration-<%= index %>" class="form-label"
                >Duration</label
              >
              <input
                type="text"
                class="form-control"
                id="duration-<%= index %>"
                name="education[<%= index %>][duration]"
                value="<%= edu.duration %>"
              />
            </div>
            <% }) %>
          </div>
        </div>

        <!-- Experience Section -->
        <div class="mb-5">
          <h2 class="text-success fs-1">Experience</h2>
          <div class="d-flex flex-column">
            <% experience.forEach((exp, index) => { %>
            <div class="mb-3">
              <label for="title-<%= index %>" class="form-label"
                >Job Title</label
              >
              <input
                type="text"
                class="form-control"
                id="title-<%= index %>"
                name="experience[<%= index %>][title]"
                value="<%= exp.title %>"
              />
              <label for="company-<%= index %>" class="form-label"
                >Company</label
              >
              <input
                type="text"
                class="form-control"
                id="company-<%= index %>"
                name="experience[<%= index %>][company]"
                value="<%= exp.company %>"
              />
              <label for="duration-<%= index %>" class="form-label"
                >Duration</label
              >
              <input
                type="text"
                class="form-control"
                id="duration-<%= index %>"
                name="experience[<%= index %>][duration]"
                value="<%= exp.duration %>"
              />
              <label for="responsibilities-<%= index %>" class="form-label"
                >Responsibilities</label
              >
              <textarea
                class="form-control"
                id="responsibilities-<%= index %>"
                name="experience[<%= index %>][responsibilities]"
                rows="3"
              >
<%= exp.responsibilities.join(", ") %></textarea
              >
            </div>
            <% }) %>
          </div>
        </div>

        <!-- Submit and Cancel -->
        <div class="text-center">
          <button type="submit" class="btn btn-success">Save</button>
          <a href="/dashboard" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
