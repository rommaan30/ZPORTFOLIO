<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Left Navbar -->
        <div class="col-md-2 bg-dark text-white vh-100">
          <h4 class="p-3">Dashboard</h4>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-white" href="/dashboard">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/dashboard/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/dashboard/resume">Resume</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout">Logout</a>
            </li>
          </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 p-5">
          <h1 class="text-center mt-4">Welcome to Your Dashboard</h1>
          <div class="card mt-5">
            <div class="card-header">
              <h4>About Section</h4>
            </div>
            <div class="card-body">
              <h5>Title: <span id="about-title">My Portfolio</span></h5>
              <p>
                Description:
                <span id="about-description"
                  >This is a description of my portfolio.</span
                >
              </p>
              <button class="btn btn-primary" id="edit-about">Edit</button>
              <div id="edit-form" class="mt-3" style="display: none">
                <input
                  type="text"
                  id="edit-title"
                  class="form-control"
                  placeholder="Enter new title"
                />
                <textarea
                  id="edit-description"
                  class="form-control mt-3"
                  rows="4"
                  placeholder="Enter new description"
                ></textarea>
                <button class="btn btn-success mt-3" id="save-about">
                  Save
                </button>
              </div>
            </div>
          </div>

          <!-- Resume Edit Section -->

          <div class="container mt-5 p-4 border rounded shadow-sm bg-light">
            <h2 class="mb-3">Resume Section</h2>
            <p class="text-secondary">
              Edit and manage your resume directly from here.
            </p>
            <a href="/dashboard/resume/edit" class="btn btn-primary btn-lg"
              >Edit Resume</a
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Show edit form when "Edit" is clicked
      document
        .getElementById("edit-about")
        .addEventListener("click", function () {
          document.getElementById("edit-about").style.display = "none";
          document.getElementById("edit-form").style.display = "block";
        });

      // Save changes and update the About section
      document
        .getElementById("save-about")
        .addEventListener("click", function () {
          var newTitle = document.getElementById("edit-title").value;
          var newDescription =
            document.getElementById("edit-description").value;

          // Update the About section with new data
          document.getElementById("about-title").textContent = newTitle;
          document.getElementById("about-description").textContent =
            newDescription;

          // Hide the edit form and show the "Edit" button again
          document.getElementById("edit-form").style.display = "none";
          document.getElementById("edit-about").style.display = "block";

          // Optionally, send the new data to the server (e.g., using fetch or AJAX)
          alert("Changes saved!");
        });
    </script>
  </body>
</html>
